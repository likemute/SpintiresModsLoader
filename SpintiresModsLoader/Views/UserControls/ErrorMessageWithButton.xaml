<UserControl x:Class="SpintiresModsLoader.Views.UserControls.ErrorMessageWithButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControls="clr-namespace:SpintiresModsLoader.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <userControls:ErrorMessageWithButtonViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Label Content="{Binding Message}" Margin="0,112,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="16" Foreground="Red" Background="#4CFFFFFF"/>
        <Button Content="{DynamicResource Close}" Margin="20,171,20,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
